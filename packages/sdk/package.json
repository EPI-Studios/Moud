{
  "name": "@epi-studio/moud-sdk",
  "version": "0.8.0",
  "description": "The official Scripting Development Kit for the Moud Engine.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && tsc && pnpm run build:js",
    "build:js": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.js --external:@epi-studio/moud-sdk",
    "clean": "rm -rf dist",
    "test": "tsc --project tests/tsconfig.json",
    "docs": "typedoc src/index.ts --out docs",
    "deploy:docs": "npm run docs && gh-pages -d docs"
  },
  "devDependencies": {
    "esbuild": "^0.21.4",
    "gh-pages": "^6.3.0",
    "typedoc": "^0.25.13"
  }
}
